# -*- mode: shell-script; coding: utf-8; -*-
# 
# ~/.zsh.d/zshalias
# 

## エイリアス
# ====================================================================

### カラー化
# --------------------------------------------------------------------
alias ls='ls --color=auto'
#export LS_OPTIONS='--color=auto'
alias grep='grep --color=auto'


### ls バリエーション
# --------------------------------------------------------------------
alias la='ls -lhAF'
alias ll='ls -laF --color | lv'
alias lls='ls -ls --color'


### ps バリエーション
# --------------------------------------------------------------------
alias psax='ps ax'
alias psaxf='ps axf'

### ユーティリティとか
# --------------------------------------------------------------------
alias what='command -v'
alias h='history -E -32'

alias iso-8601='date --iso-8601=seconds'
alias rfc-3339='date --rfc-3339=seconds'

### セーフティ
# --------------------------------------------------------------------
alias rmi='rm -i'
alias cpi='cp -i'
alias mvi='mv -i'


### タイポ強制ギプス
# --------------------------------------------------------------------
alias grpe='sl -g'

### Steam を動かすために必要
#
# --------------------------------------------------------------------
alias remove-bad-steam-libs='find ~/.steam/root/ \( -name "libgcc_s.so*" -o -name "libstdc++.so*" -o -name "libxcb.so*" \) -print -delete'
alias remove-bad-steam-libs-local='find ~/.local/share/Steam/ \( -name "libgcc_s.so*" -o -name "libstdc++.so*" -o -name "libxcb.so*" \) -print -delete'
