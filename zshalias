# -*- mode: shell-script; coding: utf-8; -*-
# 
# ~/.zsh.d/zshalias
# 

## エイリアス
# ====================================================================

### カラー化
# --------------------------------------------------------------------
alias ls='ls --color=auto'
alias grep='grep --color=auto'


### ls バリエーション
# --------------------------------------------------------------------
alias la='ls -lhAF'
alias ll='ls -laF --color | lv'
alias lls='ls -ls --color'


### ps バリエーション
# --------------------------------------------------------------------
alias psax='ps ax'
alias psaxf='ps axf'

### ユーティリティとか
# --------------------------------------------------------------------
alias what='command -v'
alias h='history -E -32'


### セーフティ
# --------------------------------------------------------------------
alias rmi='rm -i'
alias cpi='cp -i'
alias mvi='mv -i'


### タイポ強制ギプス
# --------------------------------------------------------------------
alias grpe='sl -g'
