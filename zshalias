# -*- mode: shell-script; coding: utf-8; -*-
# 
# ~/.zsh.d/zshalias
# 

## エイリアス
# ====================================================================

### カラー化
# --------------------------------------------------------------------
alias ls='ls --color=auto'
alias grep='grep --color=auto'

### ls バリエーション
# --------------------------------------------------------------------
alias la='ls -lhAF'
alias ll='ls -laF --color | lv'
alias lls='ls -ls --color'

### ユーティリティとか
# --------------------------------------------------------------------
alias what='command -v'
alias h='history -E -32'

### タイポ強制ギプス
# --------------------------------------------------------------------
alias grpe='sl -g'
